.all
  = render partial: "layouts/simpleheader"

  .registry-box
    .registry-box__title
      新規会員登録
    .registry-box__content
      .registry-box__content__box
        = link_to(new_user_registration_path, class: 'registry-box__content__box__mail') do
          = fa_icon 'envelope-o', class:"icon__mail"
          メールアドレスで登録する
        = link_to("https://www.facebook.com/mercarijp", class: 'registry-box__content__box__facebook') do
          = fa_icon 'facebook-square', class:"icon__facebook"
          Facebookで登録する
        = link_to('https://www.google.com/?hl=ja', class: 'registry-box__content__box__google') do
          = image_tag '/assets/google.png', height: '25', width: '25', class: 'icon__google'
          Googleで登録する


        -# めも
        = f.collection_select :prefecture_id, Prefecture.all, :id, :name
        -# prefecture.name でとり出せる





  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email"
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password"
    .actions
      = f.submit "Sign up"
  = render "devise/shared/links"
