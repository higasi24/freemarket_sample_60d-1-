.credit-japan
  = render partial: "layouts/header"
  .credit-wrapper
    .hhhh
    .credit
      %h2.credit__header
        支払い方法
      .credit__content
        .credit__content__up2
          .credit__content__up2__show
            %h3.credit__content__up2__show__bar
              クレジットカード一覧
        .credit__content__add
          .credit__content__add__box
            = link_to root_path, class: "credit__content__add__box__buttun" do
              %i.fa.fa-credit-card
              クレジットカードを追加する
        .credit__content__down
          = link_to root_path do
            %span#credit-span
              支払い方法について
            %i.fa.fa-chevron-right
    .credit2
      %h2.credit2__header
        クレジットカード情報入力
      .credit2__content2
        .credit2__content2__box
          .credit2__content2__box__group1
            %label#title
              カード番号
            %span#mark
              必須
            %input.credit2__content2__box__group1__submit{type: "text", placeholder: "半角数字のみ", maxlength: "19"}
            %ul.credit2__content2__box__group1__list
              %li.credit2__content2__box__group1__list__sub
                %img.credit2__content2__box__group1__list__sub__image{src: "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2296184308", width: "49", height: "20"}
              %li.credit2__content2__box__group1__list__sub
                %img.credit2__content2__box__group1__list__sub__image{src: "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2296184308", width: "49", height: "20"}
          .credit2__content2__box__group2
            %label#title
              有効期限
            %span#mark
              必須
            %br
            .credit2__content2__box__group2__bath
              .credit2__content2__box__group2__bath__month
                %select.credit2__content2__box__group2__bath__month__select
                  %option{value: ""}
                    01
                %i.fa.fa-chevron-down
                %span
                  月
              .credit2__content2__box__group2__bath__year
                %select.credit2__content2__box__group2__bath__year__select
                  %option{value: ""}
                    19
                %i.fa.fa-chevron-down
                %span
                  年
          .credit2__content2__box__group3
            %label#title
              セキュリティコード
            %span#mark
              必須
            %input.credit2__content2__box__group3__submit{placeholder: "カード背面4桁もしくは3桁の番号"}
            .credit2__content2__box__group3__box
              .credit2__content2__box__group3__box__sub
                %span#question
                  ?
                カード裏面の番号とは？
          .credit2__content2__box__group4
            %button.credit2__content2__box__group4__button
              追加する
    .credit
      %h2.credit__header
        支払い方法
      .credit__content
        .credit__content__up
          .credit__content__up__show
            %h3.credit__content__up__show__bar
              クレジットカード一覧
          %ul.credit__content__up__list
            %li.credit__content__up__list__box
              %form.credit__content__up__list__box__post
                %figure.credit__content__up__list__box__post__figure
                  %img{src: "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2296184308", width: "26", height: "20"}
                  .credit__content__up__list__box__post__figure__num
                    ssssss
                  .credit__content__up__list__box__post__figure__num
                    11/9
                  %buttun.credit__content__up__list__box__post__figure__buttun
                    削除する
        .credit__content__down
          = link_to root_path do
            %span#credit-span
              支払い方法について
            %i.fa.fa-chevron-right