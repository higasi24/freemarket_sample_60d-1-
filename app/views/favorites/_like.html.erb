<div class="like-link" id="like-link-<%= @item.id %>">
  <% if current_user.favorites.find_by(item_id: @item.id) %>
    <%= link_to unlike_path(item.id), method: :delete, remote: true do %>
        <div class = "iine__button">❤️ いいね！<%= item.favorites.count %></div>
    <% end %>
  <% else %>
    <%= link_to like_path(item.id), method: :post, remote: true do %>
        <div class = "iine__button">♡ いいね！<%= item.favorites.count %></div>
    <% end %>
  <% end %>
</div>

